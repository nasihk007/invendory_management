{
  "name": "inventory-management-backend",
  "version": "1.0.0",
  "description": "Production-ready Node.js + Express + MySQL inventory management system with JWT authentication",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "start:prod": "NODE_ENV=production node src/server.js",
    "start:cluster": "NODE_ENV=production pm2 start ecosystem.config.js",
    "dev": "nodemon src/server.js",
    "dev:debug": "nodemon --inspect src/server.js",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "security:audit": "npm audit",
    "security:check": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "validate": "npm run lint && npm run security:check",
    "build": "echo 'No build step required for Node.js'",
    "postinstall": "npm run security:audit",
    "docker:build": "docker build -t inventory-api .",
    "docker:run": "docker run -p 3000:3000 --env-file .env inventory-api",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "deploy:staging": "pm2 deploy ecosystem.config.js staging",
    "deploy:production": "pm2 deploy ecosystem.config.js production",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "clean": "rm -rf node_modules coverage logs/*.log uploads/temp/*",
    "fresh": "npm run clean && npm install",
    "db:sync": "echo 'Database synced automatically on server start'"
  },
  "keywords": [
    "inventory",
    "management",
    "nodejs",
    "express",
    "mysql",
    "jwt",
    "backend"
  ],
  "author": "Interview Candidate",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "chalk": "^4.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-slow-down": "^2.0.1",
    "helmet": "^7.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "mysql2": "^3.15.0",
    "sequelize": "^6.37.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.10",
    "pm2": "^6.0.11",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
